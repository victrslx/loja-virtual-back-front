generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  price       Float
  description String
}

model CartItem {
  id        Int @id @default(autoincrement())
  productId Int
  quantity  Int
}
